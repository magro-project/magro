<Window x:Class="editor.VersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:editor"
        mc:Ignorable="d"
        Title="バージョン情報" Width="254" Height="164" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top">
            <Label Content="Magro" FontSize="14" FontWeight="Bold"/>
            <Label x:Name="versionLabel" Content="Version: 0.0.0" FontSize="12"/>
        </StackPanel>
        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="OK" Click="Button_Click" Width="70" Height="22"/>
        </Grid>
    </DockPanel>
</Window>
